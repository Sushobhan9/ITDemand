<div>
    <div id='user-dialog' class="modal" role='dialog' tabindex="-1">
        <div class="modal-dialog modal-xl">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title"><i class='fa fa-user'></i> Find User</h5>
                    <button type="button" class="btn-close" id="userSearchCloseIcon" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="row mb-3">
                        <div class="col-md-9">
                            <label class="form-label">Search Term</label>
                            <div class="input-group">
                                <input type="text" class="form-control" id="searchTerm">
                                <span class="input-group-text cursor-pointer"><i class="fa fa-search" id="userSearchIcon"></i></span>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">Search Attribute</label>
							<select id="attribute" name="attribute" class="form-select">
								<option value="sn">Last Name</option>
                                <option value="displayname">Display Name</option>
                                <option value="mail">Email Address</option>
                                <option value="samaccountname">User Name</option>
							</select>
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <table id="userResultsTable" class="table table-sm table-striped" style="display: none;">
                            <thead>
                                <tr>
                                    <th></th>
                                    <th>Name</th>
                                    <th>User Name</th>
                                    <th>Country</th>
                                    <th>Title</th>
                                </tr>
                            </thead>
                            <tbody id="userResultsBody">
                            </tbody>
                        </table>

                        <div id="userResultsLoading" style="display: none;">
                            <div class="card mb-2">
                                <div class="card-body d-flex align-items-center justify-content-center">
                                    <div class="spinner-border" role="status"></div>
                                    <span style="display: inline-block; margin-left: 10px;">Searching...</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" id="btnUserSelect" disabled>Select</button>
                </div>
            </div>
        </div>
    </div>
</div>