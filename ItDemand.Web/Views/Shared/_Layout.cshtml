<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>It Demand</title>
    <environment include="Development">
        <link rel="stylesheet" href="~/lib/font-awesome/css/fontawesome.min.css" />
        <link rel="stylesheet" href="~/lib/font-Awesome/css/regular.min.css">
        <link rel="stylesheet" href="~/lib/font-Awesome/css/solid.min.css">
        <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.css" />
        <link rel="stylesheet" href="~/lib/bootstrap-multiselect/css/bootstrap-multiselect.css" />
        <link rel="stylesheet" href="~/css/site.css" />
        <link rel="stylesheet" href="~/css/navtree.css" />
    </environment>

    <environment exclude="Development">
        <link rel="stylesheet" href="~/css/fontawesome-bundle.min.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/css/main.min.css" asp-append-version="true" />
    </environment>   
    
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.2.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.1/css/dataTables.bootstrap.min.css" />
    
    @*<link rel="stylesheet" href="~/ItDemand.Web.styles.css" asp-append-version="true" />*@
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-linde-blue border-bottom box-shadow">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/logo.png" width="91" height="30" style="float: left;" />
                    <span style="display: inline-block; margin-left: 20px;">IT Demand</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse justify-content-end">
                    <div class="navbar-text" style="padding-right: 10px;">
                        @(await Component.InvokeAsync("UserDisplayName"))
                    </div>
                    <ul class="navbar-nav">
                        <li class="nav-item dropdown">
                            <a class="nav-link" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fas fa-gear"></i>
                          </a>
                          <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                            <li>
                                <a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="Index">
                                    <i class="fa-solid fa-users"></i> Manage Approvers
                                </a>
                            </li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="Index">
                                    <i class="fa-regular fa-rectangle-list"></i> Telemetry Log
                                </a>
                            </li>
                          </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="About"><i class="fas fa-circle-question"></i></a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div style="padding-bottom: 15px;">
        <main role="main">
            @RenderBody()
            <partial name="_LoadingIndicator" />
            <partial name="_UserSelectModal" />
            <partial name="_ConfirmModal" />
            <partial name="_MessageModal" />
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container-fluid">
            &copy; @DateTime.Now.Year - IT Demand Management
        </div>
    </footer>

    <environment include="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/js/bootstrap.bundle.js"></script>
        <script src="~/lib/bootstrap-multiselect/js/bootstrap-multiselect.js"></script>
        <script src="~/js/app.js"></script>
        <script src="~/js/app.dialogs.usersearch.js"></script>
        <script src="~/js/site.js"></script>
        <script src="~/js/plug-ins/jquery-navtree.js"></script>
    </environment>

    <environment exclude="Development">
        <script src="~/js/main.min.js" asp-append-version="true"></script>
    </environment>
   
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.13.1/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.13.1/js/dataTables.bootstrap5.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

@*https://www.ezzylearning.net/tutorial/a-step-by-step-guide-to-bundling-and-minification-in-asp-net-core*@
@*https://datatables.net/examples/styling/bootstrap5.html*@