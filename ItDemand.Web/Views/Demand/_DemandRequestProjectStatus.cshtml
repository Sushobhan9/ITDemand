@model DemandRequestViewModel

@functions {
    public static string FormatDateMMM(DateTimeOffset? date)
    {
        const string format = "MMM dd yyyy";
        return date.HasValue ? date.Value.ToString(format) : string.Empty;
    }

    public static string FormatDateYYYYMM(DateTimeOffset? date)
    {
        const string format = "yyyy MMM";
        return date.HasValue ? date.Value.ToString(format) : string.Empty;
    }
}

<div class="card mt-3 mb-3">
    <div class="card-header">General</div>
    <div class="card-body">
        <div class="row">
            <div class="col">
                <label class="form-label">Project Phase</label>
                <select asp-for="ProjectPhase" asp-items="Model.ProjectPhases" class="form-select">
                    <option selected></option>
                </select>
            </div>
            <div class="col">
                <label class="form-label">Overall Status</label>
                <select asp-for="OverallStatus" asp-items="Model.GreenYellowRedOptions" class="form-select">
                    <option selected></option>
                </select>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col">
                <label class="form-label">Budget</label>
                <select asp-for="Budget" asp-items="Model.GreenYellowRedOptions" class="form-select">
                    <option selected></option>
                </select>
            </div>
            <div class="col">
                <label class="form-label">Time</label>
                <select asp-for="Time" asp-items="Model.GreenYellowRedOptions" class="form-select">
                    <option selected></option>
                </select>
            </div>
            <div class="col">
                <label class="form-label">Scope</label>
                <select asp-for="Scope" asp-items="Model.GreenYellowRedOptions" class="form-select">
                    <option selected></option>
                </select>
            </div>
        </div>
    </div>
</div>

