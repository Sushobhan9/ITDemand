<div class="card mt-3">
    <div class="card-header">Project Status Details</div>
    <div class="card-body">
        <div class="row">
            <div class="col">
                <label class="form-label">Key Messages</label>
                <textarea name="KeyMessages" class="form-control" rows="5">@Model.KeyMessages</textarea>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col">
                <label class="form-label">Top Issue(s)</label>
                <textarea name="TopIssues" class="form-control" rows="5">@Model.TopIssues</textarea>
            </div>
            <div class="col">
                <label class="form-label">Top Risk(s)</label>
                <textarea name="TopRisks" class="form-control" rows="5">@Model.TopRisks</textarea>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col">
                <label class="form-label">Accomplished in Last Period</label>
                <textarea name="AccomplishedLastPeriod" class="form-control" rows="5">@Model.AccomplishedLastPeriod</textarea>
            </div>
            <div class="col">
                <label class="form-label">Planned in Next Period</label>
                <textarea name="PlannedNextPeriod" class="form-control" rows="5">@Model.PlannedNextPeriod</textarea>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col">
                <label class="form-label">Key Milestones</label>
                <textarea name="KeyMilestones" class="form-control" rows="5">@Model.KeyMilestones</textarea>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col">
                <label class="form-label">Milestone Plan Date</label>
                <div class="input-group">
                    <input type="text" name="MilestonePlanDate" class="form-control datepicker" value="@FormatDateMMM(Model.MilestonePlanDate)">
                    <span class="input-group-text cursor-pointer"><i class="fa fa-calendar"></i></span>
                </div>
            </div>
            <div class="col">
                <label class="form-label">Milestone Actual Date</label>
               <div class="input-group">
                    <input type="text" name="MilestoneActualDate" class="form-control datepicker" value="@FormatDateMMM(Model.MilestoneActualDate)">
                    <span class="input-group-text cursor-pointer"><i class="fa fa-calendar"></i></span>
                </div>
            </div>
        </div>
    </div>
</div>